<div class="col-md-4 mx-auto">

    <div class="card">
        <div class="card-body">
            <form action="/clinicos/edit/{{Clinico.id}}" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" value="{{Clinico.title}}" autofocus>
                </div>
                
                <div class="form-group">
                    <textarea name="description" rows="2" class="form-control" placeholder="Descripcion">{{Clinico.description}}</textarea>
                </div>
                
                <div class="form-group">
                    <img src="/uploads/{{Clinico.image}}" class="img-fluid">
                        </div>


                <div class="form-group">
                    <button class="btn btn-success btn-block">
                        Guardar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>